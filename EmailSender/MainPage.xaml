<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmailSender.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label" ApplyToDerivedTypes="True">
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="30,0"
            VerticalOptions="Center">
            <Grid ColumnDefinitions="auto,*" RowDefinitions="auto,auto,auto" RowSpacing="10">
                <Label Text="Email"/>
                <Entry x:Name="txtEmail" Grid.Column="1" Placeholder="abc@abc.com" ReturnType="Next"/>
                <Label Text="Password" Grid.Row="1"/>
                <Entry x:Name="txtPassword" Grid.Row="1" Grid.Column="1" IsPassword="True" ReturnType="Next"/>
                <Label Text="Port" Grid.Row="2"/>
                <Entry x:Name="txtPort" Grid.Row="2" Grid.Column="1"  Placeholder="587 for gmail, 25," Text="587" ReturnType="Next"/>
            </Grid>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
